<div class="modal fade in" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false" style="display: block;" ng-controller="loginCtrl">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title form-signin-heading" id="myModalLabel">Prode 2014</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal ng-pristine ng-invalid ng-invalid-required" role="form">
  <div class="form-group">
    <label for="codigoInput" class="col-sm-2 control-label">Codigo</label>
    <div class="col-sm-10">
      <input type="text" class="form-control ng-pristine ng-invalid ng-invalid-required" id="codigoInput" placeholder="Codigo" ng-model="token" required="" autofocus="">
    </div>
  </div>
  </form>
      </div>
      <div class="modal-footer">
        <button type="button" ng-click="login(token)" class="btn btn-lg btn-primary btn-block">Log In</button>
      </div>
    </div>
  </div>
</div>
<div class="modal-backdrop fade in"></div>